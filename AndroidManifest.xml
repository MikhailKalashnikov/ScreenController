<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mikhail.kalashnikov.screencontroler"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="21" />
	
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mikhail.kalashnikov.screencontroler.ShakeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="mikhail.kalashnikov.screencontroler.TurnOnScreenActivity"></activity>
        
        <service android:name="WakeUpService"></service>
        <receiver 
            android:name="mikhail.kalashnikov.screencontroler.DeviceAdminLockReceiver"
            android:label="@string/device_admin_label"        
            android:description="@string/device_admin_description"        
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data 
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin_policies"/>
            <intent-filter >
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
